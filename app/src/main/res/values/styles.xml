<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myeongjiBlue</item>
        <item name="colorPrimaryDark">@color/myeongjiDarkBlue</item>
        <item name="colorAccent">@color/myeongjiBlue</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/kopubmedium</item>
        <item name="android:windowBackground">@color/mainColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorControlNormal">#F9F9F9</item>
    </style>

    <style name="menuTextSize" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:fontFamily">@font/kopubmedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">100dp</item>

    </style>


</resources>
